<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="IP"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <ListPreference
        android:key="transform"
        android:title="@string/pref_transform"
        android:dialogTitle="@string/pref_transform"
        android:entries="@array/pref_transform_entries"
        android:entryValues="@array/pref_transform_values"
        android:defaultValue="0" />
    <ListPreference
        android:key="music"
        android:title="@string/pref_music"
        android:dialogTitle="@string/pref_music"
        android:entries="@array/pref_music_entries"
        android:entryValues="@array/pref_music_values"
        android:defaultValue="0" />
    <com.example.magdam.handshake.NumberPickerPreference
        android:key="vibration"
        android:title="Wzmocnienie wibracji"
        android:defaultValue="0"
 />
</PreferenceScreen>
